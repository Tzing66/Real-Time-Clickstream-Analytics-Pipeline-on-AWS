{
  "Comment": "Clickstream Ingestion Pipeline",
  "StartAt": "StartSimulatorLambda",
  "States": {
    "StartSimulatorLambda": {
      "Type": "Task",
      "Resource": "arn value of your lambda function",
      "Next": "WaitForIngestion"
    },
    "WaitForIngestion": {
      "Type": "Wait",
      "Seconds": 20,
      "Next": "StartGlueJob"
    },
    "StartGlueJob": {
      "Type": "Task",
      "Resource": "arn:aws:states:::glue:startJobRun.sync",
      "Parameters": {
        "JobName": "your glue job name"
      },
      "Next": "RepairAthenaPartitions",
      "Catch": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "Next": "NotifyFailure"
        }
      ]
    },
    "RepairAthenaPartitions": {
      "Type": "Task",
      "Resource": "arn:aws:states:::athena:startQueryExecution.sync",
      "Parameters": {
        "QueryString": "MSCK REPAIR TABLE `dbname`.`tablename`",
        "QueryExecutionContext": {
          "Database": "dbname"
        },
        "ResultConfiguration": {
          "OutputLocation": "s3 bucket for athena output storage"
        }
      },
      "Next": "NotifySuccess",
      "Catch": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "Next": "NotifyFailure"
        }
      ]
    },
    "NotifySuccess": {
      "Type": "Task",
      "Resource": "arn:aws:states:::sns:publish",
      "Parameters": {
        "TopicArn": "arn value of your topic",
        "Message": "Clickstream pipeline executed successfully."
      },
      "End": true
    },
    "NotifyFailure": {
      "Type": "Task",
      "Resource": "arn:aws:states:::sns:publish",
      "Parameters": {
        "TopicArn": "arn value of your topic",
        "Message": "Clickstream pipeline failed."
      },
      "End": true
    }
  }
}